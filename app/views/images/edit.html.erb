

<%= form_for(@image,  html: {class: 'ui form'}) do |f| %>
  <div class="field">
    <label>タイトル(英語)</label>
      <%= f.text_field :en_title, class: '' %>
  </div>
  
  <div class="field">
    <label>タイトル(日本語)</label>
      <%= f.text_field :ja_title, class: '' %>
  </div>
  
  <div class="field">
    <label>内容(英語)</label>
      <%= f.text_field :en_content, class: '' %>
  </div>
  
  <div class="field">
    <label>内容(日本語)</label>
      <%= f.text_field :ja_content, class: '' %>
  </div>
  
  <div class="field">
    <label>位置</label>
      <%= f.text_field :location, class: '' %>
  </div>
  
  <div class="field">
    <label>URL</label>
      <%= f.file_field :url, class: '' %>
  </div>
  
  <div class="field">
    <label>動画</label>
      <%= f.text_field :movie, class: '' %>
  </div>
  
  <div class="actions">
    <%= f.submit "更新", class: 'ui button'%>
  </div>
<% end %>