<table class="ui celled striped table">
  <thead>
    <tr><th colspan="3">
      詳細
    </th>
  </tr></thead>
  <tbody>
    <tr>
      <td class="collapsing">
        ID
      </td>
      <td><%= @movie.id %></td>
    </tr>
    <tr>
      <td class="collapsing">
        タイトル(英語)
      </td>
      <td><%= @movie.en_title %></td>
    </tr>
    <tr>
      <td class="collapsing">
        タイトル(日本語)
      </td>
      <td><%= @movie.ja_title %></td>
    </tr>
    <tr>
      <td>
        内容(英語)
      </td>
      <td><%= @movie.en_content %></td>
    </tr>
    <tr>
      <td>
        内容(日本語)
      </td>
      <td><%= @movie.ja_content %></td>
    </tr>
    <tr>
      <td>
        URL
      </td>
      <td><%= video_tag(@movie.url, :size => '200x200') if !@movie.url.nil? %></td>
    </tr>
    <tr>
      <td>
        登録日
      </td>
      <td><%= @movie.created_at %></td>
    </tr>
    <tr>
      <td>
        管理
      </td>
     <td>
      <%= link_to "編集", edit_image_path(@movie.id) %>
		    <%= link_to "削除", @movie, method: :delete, data: { confirm: "本当に削除してもいいですか？" } %>
     </td>
    </tr>
  </tbody>
</table>

<div class="h_100"></div>