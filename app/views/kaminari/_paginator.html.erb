<%# The container tag
  - available local variables
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
    paginator:     the paginator that renders the pagination tags inside
-%>

<div class="nav_posi">
<%= paginator.render do -%>
  <nav class="ui pagination menu">
    <% unless current_page.first? %>
      <div class="item"><%= first_page_tag unless current_page.first? %></div>
      <div class="item"><%= prev_page_tag unless current_page.first? %></div>
    <% end %>
    <% each_page do |page| -%>
          <div class="item">
      <% if page.display_tag? -%>
                <%= page_tag page %>
      <% elsif !page.was_truncated? -%>
        <%= gap_tag %>
      <% end -%>
      </div>
    <% end -%>
    <% unless current_page.out_of_range? %>
      <div class="item"><%= next_page_tag unless current_page.last? %></div>
      <div class="item"><%= last_page_tag unless current_page.last? %></div>
    <% end %>
  </nav>
<% end -%>
</div>
